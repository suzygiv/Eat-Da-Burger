  
<div class="container">

  <div class="row">
    <div class="col-12">
      <div class="mx-auto" style="width:256px">
        <img src="assets/hiclipart.com.png" />
      </div>
        <h1 class="text-center">Eat da Burger!</h1> 
    </div>
  </div>

  <div class="burgers">
    <h2><i class="fas fa-hamburger"></i> Available Burgers:</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
    </ul>
  </div>

  <div class="devoured">
    <h2><i class="fas fa-hamburger"></i> Devoured Burgers:</h2>
  <div class="eaten">
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger/burger-block devoured=true}}
        {{/if}}
        {{/each}}
    </ul>
  </div>
  </div>


  <div class="row" style="padding-top: 50px">
    <div class="col-12">

      <h3 class="text-center">Add a burger:</h3>

        <form class="create-form">
          <div class="form-row align-items-center">
            <div class="col-6 offset-3">
              <input class="form-control" type="text" id="burger-name-input" placeholder="Enter Burger Name">
            </div>
            <div class="col-auto">
              <button type="submit" id="burger-submit" class="btn btn-danger ">Add Burger</button>
            </div>
          </div>
        </form>

    </div>
  </div>
</div>